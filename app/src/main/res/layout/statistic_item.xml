<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:orientation="vertical"
        android:padding="10dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/stat_name_exercise"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="@string/excercise"
            android:textSize="34sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/stat_date"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="@string/example_date"
            android:textSize="24sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/stat_sessions"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/number_of_sessions"
            android:textSize="20sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/stat_repetition"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/number_of_iterations"
            android:textSize="20sp"
            android:textStyle="bold" />
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>